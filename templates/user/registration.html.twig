{% extends 'base.html.twig' %}

{# You can replace other parent blocks @see '../base.html.twig' #}
{% block description 'user.registration.head.meta.description'|trans %}
{% block title 'user.registration.head.meta.title'|trans %}

{% block og_title 'user.registration.head.meta.title'|trans %}
{% block og_description 'user.registration.head.meta.description'|trans %}

{% block content_tag_attributes 'id="user-registration"' %}

{% block content %}
    <section>
        <div class="container text-center">
            <div class="row mb-4">
                <div class="col">
                    <h1><span class="fas fa-user-plus"></span> {{ 'user.registration.body.h1'|trans|upper }}</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <!-- This form is not a best practice, it is used to show you many options -->
                    <!-- The best form is on one line -->
                    {{ form_start(registrationForm) }}

                    <div class="row">
                        <div class="col-md">
                            <div class="form-group form-error">
                                {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-group form-error">
                                {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-error">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group form-error">
                        {{ form_row(registrationForm.birthDate, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group form-error">
                        {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group form-error">
                        {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="mb-2">
                        {{ form_row(registrationForm.termsAccepted) }}
                    </div>

                    <button type="submit" class="btn btn-success"><span class="fas fa-plus-circle"></span> {{ 'user.registration.body.form.submit'|trans }}</button>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
            <div class="row text-left ul-subtitle-text">
                <div class="col">
                    <u>{{ 'default.index.body.ul.second'|trans }}</u>
                    <ul>
                        <li><a href="{{ path('app_index') }}">{{ 'button.homepage'|trans }}</a></li>
                        <li><a href="{{ path('app_security_login') }}">{{ 'button.login'|trans }}</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
